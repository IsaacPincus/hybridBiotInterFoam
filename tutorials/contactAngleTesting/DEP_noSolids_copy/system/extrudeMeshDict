FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      extrudeMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

constructFrom patch;
sourceCase ".";
sourcePatches (front);        // Use "front" not "frontAndBack"
exposedPatchName front;        // This will be the new back patch
nLayers 1;
expansionRatio 1.0;
extrudeModel linearDirection;
linearDirectionCoeffs
{
    direction (0 0 1);
    thickness 1e-3;           // Small thickness for 2D
}
mergeFaces false;
flipNormals false;