FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     convectionFoam;

startFrom       latestTime;

startTime       0;

stopAt          endTime; //writeNow; //endTime;

endTime         2e-2;

deltaT          1e-4;

writeControl    adjustableRunTime;

writeInterval   5e-3;

purgeWrite      0;

writeFormat     ascii;

writePrecision  10;

writeCompression uncompressed;

timeFormat      general;

timePrecision   10;

runTimeModifiable yes;

adjustTimeStep  yes;

maxCo           0.15;
maxAlphaCo      0.15;
maxDeltaT       1e-1;


